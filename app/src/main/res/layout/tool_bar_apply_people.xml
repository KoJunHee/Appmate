<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="48dp"
    android:background="@drawable/like_people_tool_bar_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbCheckApply"
        android:layout_width="360dp"
        android:layout_height="48dp">


        <!--뒤로가기 버튼-->
        <LinearLayout
            android:id="@+id/llApplyBack"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/mypage_back" />
        </LinearLayout>

        <!--최종 팀원을 선택해주세요 or 프로젝트에 지원한 사람들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="3sp"
                android:textColor="#ffffff"
                android:textSize="17sp"
                tools:text="최종 팀원을 선택해주세요" />
        </LinearLayout>

        <!--모집인원 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">
            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="3sp"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:text="0" />
        </LinearLayout>

        <!--모집인원 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/slush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="3sp"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tvNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="3sp"
                android:textColor="#ffffff"
                android:textSize="17sp"
                tools:text="3" />
        </LinearLayout>


        <!--선택-->
        <LinearLayout
            android:id="@+id/llselect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/select"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:lineSpacingExtra="6sp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                tools:text="aa"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
</RelativeLayout>