<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="360dp"
    android:layout_height="72dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--유저 이미지-->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserImageComment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <!--닉네임-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:id="@+id/tvNickNameComment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:textColor="#de333333"
                        android:lineSpacingExtra="5sp"
                        tools:text="Geiwo Gigants"
                        />
                </LinearLayout>

                <!--댓글-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="32dp">
                    <TextView
                        android:id="@+id/tvComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#de999999"
                        android:lineSpacingExtra="5sp"
                        tools:text="멋진 프로젝트네요! 기대됩니다."
                        />
                </LinearLayout>

                <!--indicator-->
                <LinearLayout
                    android:id="@+id/indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="173dp"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/indicator_comment"/>
                </LinearLayout>

                <!--몇분전-->
                <LinearLayout
                    android:layout_width="57dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/indicator">
                    <TextView
                        android:id="@+id/tvTimeComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        tools:text="15 분전" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>